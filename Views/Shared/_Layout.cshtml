<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Escape Pirata</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <a href='@Url.Action("")'><img src="~/img/logo.jpeg"></a>
        <nav>
            <ul>
                <li><a href='@Url.Action("Comenzar")'>Comenzar</a></li>
                <li><a href='@Url.Action("Creditos")'>Créditos</a></li>
            </ul>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <p>&copy;@DateTime.Now.Year David Chinski, Tomás Korngold y Lucas Tjor</p>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
